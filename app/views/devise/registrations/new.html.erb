<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">

      <div class="devise-title">
        <h2>S'inscrire</h2>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, label: "PrÃ©nom",
                      autofocus: true,
                      input_html: { autocomplete: "first_name" }%>
          <%= f.input :surname, label: "Nom",
                      autofocus: true,
                      input_html: { autocomplete: "surname" }%>
          <%= f.input :gender, label: "Sexe", collection: ["Femme", "Homme"] %>
          <%= f.input :age, input_html: { value: '18' } , label: "Age", append: "ans" %>
          <%= f.input :user_address, label: "Adresse",
                      autofocus: true,
                      input_html: { autocomplete: "user_address" }%>
          <%= f.input :email,label: "Email",
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password, label: "Mot de passe",
                      hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirmer votre mot de passe",
                      input_html: { autocomplete: "new-password" } %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "S'inscrire" %>
        </div>
      <% end %>

      <div class="devise-shared">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
