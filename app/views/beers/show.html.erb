<div class="container">

  <div class="title" id="title-product">
    <h2><%= @beer.name %></h2>
  </div>

    <div>
      <p>Brasserie — <%= @beer.brewery %></p>
      <p>Taux d'alcool — <%= @beer.alcohol_level %></p>
      <p>IBU / amertume — <%= @beer.ibu_level %></p>
    </div>

  <div>
    <p>Les avis sur cette biére</p>

    <% @beer.reviews.each do |review| %>
      <%= review.rating %>
      <%= review.comment %>
    <% end %>
  </div>

  <div>
    <%= simple_form_for [ @beer, @favorite ] do |f| %>
      <%= f.hidden_field :beer_id, value: @beer.id %>
      <%= f.button :submit, "Ajouter aux favoris", class: "btn btn-primary", "data-disable-with" => "Envoie en cours.." %>
    <% end %>
  </div>

  <div>
    <p>Où trouver cette bière ?</p>
    <% @shops.each do |shop| %>
    <%= shop.name %>
    <% end %>
  </div>

  <div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


  <div>
    <p>Ajoute un avis sur cette bière</p>
    <% if current_user.present? %>
      <%= simple_form_for [ @beer, @review ] do |f| %>
        <%= f.input :rating, label: "Note", as: :float, input_html: { min: '0', max: '5', step: 'any' } %>
        <%= f.input :comment, label: "Commentaire" %>
        <%= f.submit "Envoyer", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>

</div>
