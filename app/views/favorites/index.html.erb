<div class="container">

<% if @my_favorite_beers.present? || @my_favorite_recipes.present? %>
  <div class="title" id="title-favorite">
    <h2>Salut <%= current_user.first_name %>, voici tes favoris</h2>
  </div>

    <div class="row-myfav">

      <div class="column-myfav">

        <%= image_tag "fav_beers.svg", class: "myfav-icon-beers" %>
        <div class="myfav-title">bières préférées</div>

        <div class="container-favorite">

          <% @my_favorite_beers.each do |favorite| %>
          <div class="wrapper-beer-fav">
            <%= link_to beer_path(favorite.beer), class:"link-product-beer-fav" do %>
              <div class="container-favorite-list-beer">
                <div class="top-beer-fav">
                <%= image_tag(favorite.beer.photo_path) %>
                </div>
                <div class="bottom-beer-fav">
                  <div class="details-beer-fav">
                    <h1><%= favorite.beer.name %></h1>
                  </div>
                </div>
              </div>
              <div class="inside-product-beer-fav">
                <div class="icon-product-beer-fav"><i class="fas fa-heart"></i></div>
                <div class="contents-beer-fav ">
                  <div class="row">
                    <div class="column-3 col col-6">
                      <div class="product-title-beer-fav ">Brasserie</div>
                      <div class="product-text-beer-fav"><%= favorite.beer.brewery %></div>
                      <div class="product-title-beer-fav ">Type</div>
                      <div class="product-text-beer-fav"><%= favorite.beer.color %></div>
                      <div class="product-title-beer-fav ">Style</div>
                      <div class="product-text-beer-fav"><%= favorite.beer.style %></div>
                    </div>
                    <div class="col col-6">
                      <div class="product-title-beer-fav ">Origine</div>
                      <div class="product-text-beer-fav"><%= favorite.beer.country %></div>
                      <div class="product-title-beer-fav ">Alcool</div>
                      <div class="product-text-beer-fav"><%= favorite.beer.alcohol_level %> %</div>
                      <div class="product-title-beer-fav ">IBU</div>
                      <div class="product-text-beer-fav"><%= favorite.beer.ibu_level %></div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <% end %>

        </div>

      </div>

       <div class="column-myfav">

        <%= image_tag "fav_recipes.svg", class: "myfav-icon-recipes" %>
        <div class="myfav-title">recettes préférées</div>

        <div class="container-favorite">

          <% @my_favorite_recipes.each do |favorite| %>
          <div class="wrapper-recipe-fav">
            <%= link_to recipe_path(favorite.recipe), class:"link-product-recipe-fav" do %>
            <div class="container-favorite-list-recipe">
              <div class="top-recipe-fav">
              <%= image_tag(favorite.recipe.photo_path) %>
              </div>
              <div class="bottom-recipe-fav">
                <div class="details-recipe-fav">
                  <h1><%= favorite.recipe.name %></h1>
                </div>
              </div>
            </div>
            <div class="inside-product-recipe-fav">
              <div class="icon-product-recipe-fav"><i class="fas fa-heart"></i></div>
              <div class="contents-recipe-fav">
                <div class="row">
                    <div class="product-title-recipe-fav">Niveau de difficulté</div>
                    <div class="product-text-recipe-fav"><%= favorite.recipe.difficulty_level %></div>
                    <div class="product-title-recipe-fav">Temps de préparation</div>
                    <div class="product-text-recipe-fav"><%= favorite.recipe.prep_time %> min</div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        </div>

      </div>

    </div>

  <a href="#" id="haut"><i class="fas fa-arrow-up"></i> haut de page</a>
<% else %>
  <div class="title" id="title-favorite">
    <h2>Salut <%= current_user.first_name %> !</h2>

    <div class="text-nofav">
      Tu n'as malheureusement pas encore de favoris.<br>
      N'hésite pas à trouver les élus de ton <i class="fas fa-heart"></i>

      <div class="no-fav">
        <%= link_to "Je match ma bière", beers_category_index_path, class: "btn-nofav" %>
        <%= link_to "Je match mon repas", recipes_category_index_path, class: "btn-nofav" %>
      </div>
    </div>
  </div>
<% end %>
</div>
